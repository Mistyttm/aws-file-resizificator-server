{
    "dependencies": {
        "aws-sdk": "^2.1472.0",
        "axios": "^1.5.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "fluent-ffmpeg": "^2.1.2",
        "morgan": "^1.10.0",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/aws-sdk": "^2.7.0",
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.18",
        "@types/fluent-ffmpeg": "^2.1.22",
        "@types/morgan": "^1.9.6",
        "@types/uuid": "^9.0.5",
        "bun-types": "^1.0.5-canary.20231009T140142",
        "nodemon": "^3.0.1",
        "rimraf": "^5.0.5",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.2.2"
    },
    "scripts": {
        "dev": "bun run compile-front-end && bun nodemon",
        "compile-front-end": "bun x rimraf ./build/app && (cd ./src/app && bun run build && cp -r ./dist ../../build/app)",
        "compile": "bun x rimraf ./build/server && bun build --target=bun ./src/server/* --outdir build/server/ && bun compile-front-end",
        "start": "bun compile && bun build/server/index.js",
        "install-all": "cd ./src/app && bun i build && (cd ../.. &&  bun i)"
    }
}
