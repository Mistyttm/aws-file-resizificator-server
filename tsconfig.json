{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "types": ["bun-types"],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@middleware/*": ["middleware/*"],
      "@routes/v1/*": ["routes/v1/*"]
    }
  }
}